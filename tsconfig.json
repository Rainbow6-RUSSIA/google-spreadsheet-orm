{
	"compilerOptions": {

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,

		"declaration":true,
		"declarationMap": true,

		"sourceMap":true,

		"outDir": "dist",
		"target": "es5",
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}